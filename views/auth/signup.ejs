<div class="space">
</div>
<header class="masthead">
    <div class="header-content">
        <div class="header-content-inner">
            <% if (errorMessage) { %>
                <p class="error-message">
                    <%= errorMessage %>
                </p>
                <% } %>

                    <form action="/signup" method="post">
                        <div>
                            <label for="name-input"> Name </label>
                            <input type="text" name="username" id="name-input" placeholder="e.g., Willy Fox">
                        </div>

                        <div>
                            <label for="email-input"> Email </label>
                            <input type="email" name="email" id="email-input" placeholder="e.g., willy.fox@baloon.com">
                        </div>

                        <div>
                            <label for="password-input"> Password </label>
                            <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
                        </div>

                        <button> Create New Account </button>
                    </form>

                    <p>
                        Already have an account?
                        <a href="/login">
                        Log in.
                    </a>
                    </p>
        </div>
    </div>
</header>