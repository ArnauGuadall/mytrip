<header class="masthead">
    <div class="header-content">
        <div class="header-content-inner">


            <h2>At Your Service</h2>

            <div class="col-xs-12 text-center">
                <ul class="trip-list">
                    <% for (var i=0; i<usertrips[0].trips.length; i++) {%>
                        <li>
                            <a href="/trip/<%= usertrips[0].trips[i]._id %>/activities">
                                <%= usertrips[0].trips[i].tripname %>
                            </a>
                        </li>
                        <%}%>
                </ul>

                <form action="/addtrip">
                    <input type="submit" value="Add a new trip" />
                </form>
            </div>

            <div class="col-xs-12 text-center" <i class="fa fa-4x fa-paper-plane text-primary sr-icons">
                </i>
                <h3>Maps Ready</h3>
                <p class="text-muted">Use Google maps to see what do you want to visit!</p>

            </div>
        </div>
    </div>
</header>