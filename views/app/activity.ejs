<header class="masthead">

    <div class="header-content-inner">

        <div class="row">


            <div class="col-xs12 col-md-5">
                <h2>Activities</h2>
                <form>
                    <div class="col-xs-12">
                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            <label for="date">Date</label>
                            <input type="date" id="date" class="form-control">
                        </div>
                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            <label for="price">Price</label>
                            <input type="number" id="price" class="form-control">
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="col-md-6 col-sm-12 col-xs-12 radiobutton">
                            <label for="category">Category</label><br>
                            <input type="radio" name="category" value="Food" checked="checked"> Food <br>
                            <input type="radio" name="category" value="Accomodation"> Accomodation<br>
                            <input type="radio" name="category" value="Transport"> Transport <br>
                            <input type="radio" name="category" value="Activities"> Activities <br>
                            <input type="radio" name="category" value="Other"> Other <br>
                        </div>

                        <div class="form-group col-md-6 col-sm-12 col-xs-12">
                            <label for="notes">Notes</label> <br>
                            <textarea rows="5" cols="30" id="notes" name="notes"></textarea><br><br>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <input id="address" class="sizeGeoInput" type="" name="address" placeholder="address">
                        <input id="submit" class="sizeGeoInput" type="button" value="Geocode"><br><br>
                    </div>


                </form>


            </div>

            <div class="col-xs-12 col-md-7 paddRight">
                <div id="map"></div>
            </div>


            <div class="newRecord">

            </div>

        </div>
    </div>

</header>

<div class="col-xs-12 activities-list">
    <h3 style="width:100%; float:left; display:block;margin:15px auto; text-align:center">List of Activities:</h3>
    <% trip.activities.forEach(function(activity) { %>
        <div class="col-md-4 col-sm-6 col-xs-12 content-left">
            <p class="col-xs-12"><i class="material-icons">event_note</i>
                <span class="date"> <%= activity.date %></span>
            </p>
            <p class="bigger col-xs-12"><i class="material-icons">add_location</i>
                <span class="location"> <%= activity.location %>
                        </p>
                        <p class="bigger col-xs-12"><i class="material-icons">chat</i>
                            <span class="text"> <%= activity.text %></span>
            </p>

            <p class="col-xs-12">
                <p class="tag left col-xs-6"><i class="material-icons">label</i>
                    <span class="category"> <%= activity.category %></span>
                </p>
                <p class="right col-xs-6"> <i class="material-icons">monetization_on</i>
                    <span class="price"> <%= activity.price %> â‚¬</span>
                </p>
            </p>
        </div>
        <% }); %>

</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW0Xx6VL6pf9pvNc3Qs12m3nnl5soGQAI&libraries=places" async defer></script>
