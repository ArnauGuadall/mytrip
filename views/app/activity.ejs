<header class="masthead">

    <div class="header-content-inner">

        <div class="row">
            <div class="col-md-5">
                <form action="/activity" method="post">

                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                        <label for="date">Date</label>
                        <input type="date" id="date" class="form-control">
                    </div>
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                        <label for="price">Price</label>
                        <input type="number" id="price" class="form-control">
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-12 radiobutton">
                        <label for="category">Category</label><br>
                        <input type="radio" class="radiobutton" name="category" value="food"> Food <br>
                        <input type="radio" class="radiobutton" name="category" value="accomodation"> Accomodation<br>
                        <input type="radio" class="radiobutton" name="category" value="transport"> Transport <br>
                        <input type="radio" class="radiobutton" name="category" value="activities"> Activities <br>
                        <input type="radio" class="radiobutton" name="category" value="other"> Other <br>
                    </div>

                    <div class="col-md-6 col-sm-6 rcol-xs-12 radiobutton">
                        <label for="notes">Notes</label> <br>
                        <textarea rows="5" cols="32" id="notes" name="notes"></textarea><br><br><br>
                    </div>

                    <div class="col-md-12 col-sm-6 rcol-xs-12">
                        <input id="address" class="sizeGeoInput" type="" name="address" placeholder="address">
                        <input id="submit" class="sizeGeoInput" type="submit" name="" value="Geocode">
                    </div>
                </form>





            </div>

            <div class="col-md-7">
                <div id="map"></div>
            </div>



            <% trip.activities.forEach(function(activity) { %>
                <div class="col-md-6" style="border: 1px solid black">
                    <p>Date:
                        <%= activity.date %>
                    </p>
                    <p>Category:
                        <%= activity.category %>
                    </p>
                    <p>Location:
                        <%= activity.location %>
                    </p>
                    <p>Price:
                        <%= activity.price %>
                    </p>
                    <p>Text:
                        <%= activity.text %>
                    </p>
                </div>
                <% }); %>


                    <div class="newRecord">



                    </div>

        </div>






        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW0Xx6VL6pf9pvNc3Qs12m3nnl5soGQAI&libraries=places" async defer></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="/javascripts/map.js"></script>
        <script>
        </script>

    </div>

</header>