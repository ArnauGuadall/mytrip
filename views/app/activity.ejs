   
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">At Your Service</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">


                  <div class="col-lg-6 col-md-6 ">

                    <form action="/activity" method="post"  class="form-inline">
                      <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" id="date" class="form-control">
                      </div>
                      <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" id="price"  class="form-control">
                      </div>
                      <div class="form-group col-md-4">
                        <div class="radio">
                          <label>
                            <input type="radio" name="category" value="food" checked>
                            Food
                          </label>
                        </div>
                        <div class="radio">
                          <label>
                            <input type="radio" name="category" value="accomodation">
                            Accomodation
                          </label>
                        </div>
                        <div class="radio">
                          <label>
                            <input type="radio" name="category" value="transport">
                            Transport
                          </label>
                        </div>
                        <div class="radio">
                          <label>
                            <input type="radio" name="category" value="activities">
                            Activities
                          </label>
                        </div>
                        <div class="radio">
                          <label>
                            <input type="radio" name="category" value="other">
                            Other
                          </label>
                        </div>
                      </div>

                      <div class="form-groupcol-md-8">                        
                        <label for="notes">Notes</label>
                        <textarea rows="4" cols="20" id="notes" name="notes"></textarea><br><br>
                      </div>

                      <div class="form-group">
                        <label for="address">Email address</label>
                        <input id="address" type="text" name="address" class="form-control" placeholder="Sagrada Familia, Barcelona">
                      </div>
                      <div class="form-group">
                        <input id="submit" type="submit" class="input_div form-control" value="Geocode">
                      </div>

                    </form>                    
  
                  </div>

                  <div class="col-lg-6 col-md-6">
                    <div id="map"></div>
                  </div>

                  <div class="col-lg-12 col-md-12 text-center">
                      <% trip.activities.forEach(function(activity) { %>
                        <div class="col-md-4" style="border: 1px solid black">    
                          <p>Date: <%= activity.date %> </p>
                          <p>Category: <%= activity.category %> </p>
                          <p>Location: <%= activity.location %> </p>
                          <p>Price: <%= activity.price %> </p>
                          <p>Text: <%= activity.text %> </p>
                        </div>
                      <% }); %>
                          

                    <div class="col-md-6 newRecord"></div>

                  </div>


            </div>

        </div>
    </section>







    

